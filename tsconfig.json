{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "outDir": "dist",
        "rootDir": "src",
        "noUnusedLocals": false,
        "skipLibCheck": true,
        "lib": ["DOM"],
        "types": ["node", "jest"]
    },
    "include": ["./src/**/*"]
}
